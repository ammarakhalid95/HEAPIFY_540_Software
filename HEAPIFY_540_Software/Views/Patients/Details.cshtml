@model HEAPIFY_540_Software.Models.Patient

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>Patient</h4>
    <hr />
    <dl class="dl-vertical">
        <dt>
            First Name
            @*@Html.DisplayNameFor(model => model.FirstName)*@
        </dt>

        <dd>
            @Html.DisplayFor(model => model.FirstName)
        </dd>

        <dt>
            Middle Name
            @*@Html.DisplayNameFor(model => model.MiddleName)*@
        </dt>

        <dd>
            @Html.DisplayFor(model => model.MiddleName)
        </dd>

        <dt>
            Last Name
            @*@Html.DisplayNameFor(model => model.LastName)*@
        </dt>

        <dd>
            @Html.DisplayFor(model => model.LastName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.PatientSSN)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.PatientSSN)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Email)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Email)
        </dd>

        <dt>
            Date of Birth (MM/DD/YYYY)
            @*@Html.DisplayNameFor(model => model.DateOfBirth)*@
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DateOfBirthDateOnly)
            @*@Html.DisplayFor(model => model.DateOfBirth)*@
        </dd>

        <dt>
            Address
            @*@Html.DisplayNameFor(model => model.Address.StreetName)*@
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Address.FullAddress)
            @*@Html.DisplayFor(model => model.Address.StreetName)*@
        </dd>

        <dt>
            Insurance
            @*@Html.DisplayNameFor(model => model.Insurance.InsuranceName)*@
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Insurance.InsuranceName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.MaritalStanding.MaritalStatusType)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.MaritalStanding.MaritalStatusType)
        </dd>

        <dt>
            Phone Number
            @*@Html.DisplayNameFor(model => model.PhoneNumber.PhoneNumber1)*@
        </dt>

        <dd>
            @Html.DisplayFor(model => model.PhoneNumber.PhoneNumber1)
        </dd>


    </dl>

    <h4>Patient's Personal Problems </h4>
    <table class="table">
        <tr>
            <th>
                Problems
            </th>
          
        </tr>

        @foreach (var item in Model.PatientProblems)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Problem.ProblemsName)
                </td>
                

            </tr>
        }
   </table>
        <h4>Patient's Family History </h4>
        <table class="table">
            <tr>
                <th>
                    Relationship to Patient
                </th>
                <th>
                    Problem
                </th>

            </tr>

            @foreach (var item in Model.FamilyHistoryMedicals)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Relationship.RelationshipType)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Problem.ProblemsName)
                    </td>


                </tr>
            }
    </table>

</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.PatientID }) |
    @Html.ActionLink("Back to List", "Index")
</p>
